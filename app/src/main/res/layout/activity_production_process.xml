<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--前半部分-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@mipmap/select_bg">

        <com.hjq.bar.TitleBar
                android:id="@+id/tb_title_process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barStyle="transparent"
                app:title="生产流程信息"
                app:titleSize="20sp"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_image_process"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_logo_select"/>

            <TextView
                    android:id="@+id/tv_title_process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="永州特产公司"
                    android:layout_below="@id/iv_image_process"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="35dp"
                    android:textSize="22sp"
                    android:textColor="@color/colorPrimary"/>

        </RelativeLayout>
    </RelativeLayout>

    <!--后半部分-->
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:layout_margin="15dp">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

    </android.support.v7.widget.CardView>


</LinearLayout>