<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_bg_process"
        android:orientation="vertical">

    <com.hjq.bar.TitleBar
            android:id="@+id/tb_title_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barStyle="transparent"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="200dp">

        <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@mipmap/ic_image_process"
                android:layout_marginBottom="20dp">

            <ImageView
                    android:id="@+id/iv_image_process"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:src="@mipmap/ic_sao_home"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_image_process"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="8dp"
                    android:text="生产流程信息"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>


        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_rectangle_process">

            <TextView
                    android:id="@+id/tv_title_process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="永州原材料提供公司"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_marginLeft="10dp"/>

        </RelativeLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_process"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"/>

</LinearLayout>