<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_source_bg"
            android:orientation="vertical"
            tools:context=".ui.activity.SourceActivity">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_project_source"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
                android:id="@+id/mViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:overScrollMode="never"/>

        <RelativeLayout
                android:id="@+id/rl_detailed_information"
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:background="@mipmap/ic_detailed_information_source">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原材料公司具体信息"
                    android:textSize="22sp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="18dp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>