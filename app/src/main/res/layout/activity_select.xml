<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/select_bg"
        tools:context=".ui.activity.SelectActivity">

    <!--标题-->
    <LinearLayout
            android:id="@+id/toptitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="87px"
                android:layout_marginLeft="107px"
                android:layout_marginRight="18px"
                android:src="@mipmap/ic_address_select"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="永州异蛇酒溯源"
                android:textColor="@color/white"
                android:layout_marginTop="89px"
                android:textSize="29sp"/>
    </LinearLayout>

    <!--顶部的线-->
    <LinearLayout
            android:id="@+id/topline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toptitle"
            android:layout_marginTop="26px">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_topline_select"
                android:layout_marginLeft="68px"/>
    </LinearLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_manufacturer_select"
            android:layout_above="@+id/iv_logo_select"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="24dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_souce_select"
            android:layout_above="@+id/iv_logo_select"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"/>

    <ImageView
            android:id="@+id/iv_logo_select"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:src="@mipmap/ic_logo_select"
            android:layout_centerInParent="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_mechanism_select"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="10dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_logistics_select"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="85dp"
            android:layout_marginRight="20dp"/>


</RelativeLayout>